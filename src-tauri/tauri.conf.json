{
  "productName": "Gomoku AI",
  "version": "0.1.0",
  "identifier": "com.gomoku.ai",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Gomoku AI",
        "width": 800,
        "height": 900,
        "minWidth": 600,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": null
    }
  }
}
